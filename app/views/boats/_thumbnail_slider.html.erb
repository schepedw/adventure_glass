<div class = 'row-fluid'>
<div class="col-md-12 product-container">
  <div class="carousel slide" id="myCarousel">
    <div class="carousel-inner">
      <div class="item text-center active">
        <div class="col-lg-2 col-sm-4 col-xs-6"><a href="/boats/paddleboats#waterfowl"><%= image_tag 'paddleboats/waterfowl/thumbnail.jpg',  :class=>"img-responsive thumbnail"%><span>Waterfowl</span></a></div>
      </div>
      <% @products_for_slider.each do |product| %>
        <div class="item text-center">
          <div class="col-lg-2 col-sm-4 col-xs-6">
            <a href=<%= new_shopping_cart_product_path(@cart, base_model_id: product.id) %> ><%= image_tag product.image_path + '/thumbnail.jpg', :class=>"img-responsive thumbnail"%> <span><%=product.name.pluralize %></span></a>
          </div>
        </div>
      <% end %>
    </div>
    <a class="left carousel-control" href="#myCarousel" data-slide="prev"><i class="fa fa-chevron-left"></i></a>
    <a class="right carousel-control" href="#myCarousel" data-slide="next"><i class="fa fa-chevron-right"></i></a>
  </div>
</div>
</div>
