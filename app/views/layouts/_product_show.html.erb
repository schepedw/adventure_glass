<div class = 'container'>
  <div class = 'row'>
      <div class = 'col-md-1'> <!--TODO - figure out what to do for small screens-->
      <!-- TODO: make each a link, so it's intuitive to click them?? the effect of clicking being making it active -> the larger display-->
      <% @pictures.each_with_index do |picture, index| %>
        <% active = index == 0 ? 'active ' : "" %>
      <%= image_tag picture, :class => active + 'thumbnail gallery-thumbnail'%>
    <% end %>
    </div>
    <div class = 'product-display col-md-6'>
      <div class = 'image-active'>
        <%= image_tag @pictures[0] %>
      </div>
    </div>
    <%= form_for @product do |f| %>
      <%= f.hidden_field :shopping_cart_id, value: @cart.id%>
      <%= f.hidden_field :base_model_id, value: @product.base_model_id %>
      <div class = 'col-md-2 options'>
        <h3> Available Options </h3>
        <ul class = 'options-list list-unstyled'>
          <% @product.available_options.each do |option| %>
            <li><%=check_box"#{@product.class_name.downcase}[option_ids]", option.id %> <%=option.description%></li>
          <% end %>
        </ul>
      </div>
      <div class = 'col-md-2 product-persistence col-lg-offset-1 text-center'>
        <%= button_tag type: 'submit', class: 'btn btn-primary' do %>
          <i class = 'fa fa-shopping-cart'></i> I want one!
        <% end %>
        <hr />
        <a class = 'btn btn-success'><i class = 'fa fa-bookmark'></i> Bookmark for later</a>
      </div>
    <% end %>
  </div>
</div>
