<% @cart.products.uniq.each do |product| %>
  <div class = 'row-fluid clearfix product-summary'>
    <div class = 'col-sm-2'> <!-- picture -->
      <a href="/boats/mark_twains"><%= image_tag 'paddleboats/mark_twains/thumbnail.jpg',  :class=>"img-responsive thumbnail"%></a>
    </div>
    <div class = 'col-sm-6'>
      <span class = 'cart-product-title'> <%= link_to product.name, shopping_cart_product_path(@cart, product) %> </span>
      <p> <%= product.description %> </p>
      <span> <%= link_to 'Remove', product, remote: true, method: :delete %> </span>
    </div>
    <div class = 'col-sm-2'><!-- Price -->
      <span> $<%= '%.02f' % (product.quantity * product.price) %>  </span>
      <% if product.quantity > 1 %>
        <br />
        <span>(<%= product.quantity %> @ $<%= '%.02f' % product.price %>) </span>
      <% end %>
    </div>
    <div class = 'col-sm-2'><!-- Qty -->
      <%= form_tag('#some_path') do %>
        <%= select_tag "quantity", options_for_select((0..[15, product.quantity].max).to_a, product.quantity), :class => 'btn invisible-xs' %>
      <% end %>
    </div>
  </div>
<% end %>
