<hr class = 'nav-padding'/>
<div class = 'container'>
<div class = 'row-centered'>
  <div class = 'col-centered col-xs-9'>
    <div class = 'row'>
      <div class = 'col-xs-12'>
        <div class = 'row'>
          <div class = 'col-xs-10'>
            <div class = 'row'>
              <div class = 'col-xs-12'>
                <span><h4>Shipping address:</h4> <%= @shipping_address %></span>
              </div>
            </div>

            <div class = 'row'>
              <div class = 'col-xs-12'>
                <span><h4>Payment:</h4><p> At this time, we do not accept online payments. Adventure Glass will soon call you at the phone number you provided, and we will collect your payment
                  over the phone</p></span>
              </div>
            </div>

            <div class = 'row'>
              <div class = 'col-xs-12'>
                <span><h4>Your items:</h4></span>
              </div>
            </div>
            <%= render 'shopping_carts/products_summary' %>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class = 'col-sm-3 shopping-cart-summary checkout text-center' data-spy="affix" data-offset-top="60" data-offset-bottom="200">
    <h4> Subtotal (<%= pluralize(@shopping_cart.products.count, 'item') %>): $<%= @shopping_cart.subtotal %></h4>
    <%= form_for Order.new do |f|%>
      <%= f.hidden_field :shopping_cart_id, value: @shopping_cart.id %>
      <%= f.hidden_field :user_id, value: @user.id%>
      <%= f.submit 'Place Order', class: 'btn btn-primary' %>
    <% end %>
  </div>
</div> </div>
